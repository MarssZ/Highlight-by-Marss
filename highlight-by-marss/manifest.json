{
  "manifest_version": 3,
  "name": "HighLight by Marss",
  "version": "1.3.0",
  "description": "专为AI聊天平台设计的智能高亮工具(支持Gemini、Claude、Grok、ChatGPT)，轻松标记重要内容并添加个人评论。",
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*", "https://claude.ai/*", "https://grok.com/*", "https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["src/platform/platform-adapter.js", "src/platform/gemini-adapter.js", "src/platform/claude-adapter.js", "src/platform/grok-adapter.js", "src/platform/chatgpt-adapter.js", "src/content.js", "src/copy-enhancer.js", "src/comment-manager.js"],
      "css": ["styles/content.css", "styles/comment.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "HighLight by Marss"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon.png"
  }
}